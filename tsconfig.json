{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/main/*": ["electron/main/*"],
      "@/preload/*": ["electron/preload/*"],
      "@/render/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [{
    "path": "./tsconfig.node.json"
  }]
}
